<configuration>
	<appender name = "STDOUT"
			  class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>
				%n ****** Messaggio di logging ****** %n %d{HH:ss} %-5level %logger{36} - Messaggio: %msg %n %n
			</pattern>
		</encoder>
	</appender>
	
	<root> level="debug">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>